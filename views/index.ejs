<html>
    <head>
        <title>messageboard</title>
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <a href="/new"><h1>compose new message</h1></a>
        <ul>
            <% if (messages) { %>
              <% messages.forEach(message=>{ %>
                <li>
                    <h2><%= message.text %></h2>
                    <h3>by <%= message.name %></h3>
                    <sub><%= message.added %></sub>
                    <hr>
                </li>
              <% }) %>
            <% } %>
        </ul>
    </body>
</html>